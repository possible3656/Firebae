<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register.ConfirmationCode">

    <TextView
        android:id="@+id/confimrationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Enter your Confirmation Code"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/codetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confimrationCode"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="CONFIRMATION CODE"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codetitle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:weightSum="6"

        >

        <EditText
            android:id="@+id/emailEditText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/codetitle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/emailEditText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/codetitle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/emailEditText3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/codetitle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/emailEditText4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/codetitle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/emailEditText5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/codetitle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/emailEditText6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/codetitle"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardConfirmationcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:onClick="Continueconfirm"
        app:cardBackgroundColor="@android:color/holo_blue_dark"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textCOnfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:text="Continue"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarConfirmation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:visibility="invisible" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>